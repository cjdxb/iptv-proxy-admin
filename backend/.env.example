# Server Config
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
SERVER_DEBUG=true

# Database Config
# DATABASE_TYPE: sqlite or mysql
DATABASE_TYPE=sqlite
DATABASE_PATH=data/db.db

# MySQL Config (Required if DATABASE_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DB=iptv

# Session Config
SESSION_SECRET_KEY=your-secret-key-change-in-production

# Health Check Config
# 注意：HEALTH_CHECK_TIMEOUT、HEALTH_CHECK_MAX_RETRIES 和 HEALTH_CHECK_THREADS 可在 Web 界面配置
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=1800
HEALTH_CHECK_THREADS=3

# Watch History Config
# 观看历史自动保存间隔（秒），默认 60 秒
WATCH_HISTORY_SAVE_INTERVAL=60

GUNICORN_LOG_LEVEL=info
